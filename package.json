{
    "name": "tw-launcher",
    "version": "1.2.0",
    "description": "TWLauncher",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build:win": "electron-builder --win portable",
        "build:linux": "electron-builder --linux appimage"
    },
    "author": "noxygalaxy",
    "license": "MIT",
    "dependencies": {
        "adm-zip": "^0.5.16",
        "axios": "^1.6.7",
        "discord-rpc": "^4.0.1",
        "dotenv": "^16.4.7",
        "fs-extra": "^11.1.1"
    },
    "devDependencies": {
        "electron": "latest",
        "electron-builder": "^26.0.12"
    },
    "homepage": "https://twlauncher.netlify.app",
    "bugs": {
        "url": "https://github.com/noxygalaxy/twlauncher/issues"
    },
    "build": {
        "appId": "com.noxygalaxy.twlauncher",
        "productName": "TWLauncher",
        "copyright": "2025 noxygalaxy",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "src/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "extraFiles": [
            {
                "from": ".env",
                "to": "."
            }
        ],
        "win": {
            "target": ["portable"],
            "icon": "src/assets/logos/twl.ico"
        },
        "linux": {
            "target": ["appimage"],
            "icon": "src/assets/logos/twl.png",
            "category": "Utility"
        },
        "portable": {
            "artifactName": "${productName}-${arch}.${ext}"
        }
    }
}